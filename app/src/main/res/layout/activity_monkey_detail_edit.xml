<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgroundblue"
    tools:context=".activities.MonkeyDetailEditActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Редактирование"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/bluevenderLight"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editMonkeyName"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_name"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:hint="Имя"
                android:inputType="text"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editMonkeyAge"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_child"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:hint="Возраст"
                android:inputType="text"
                android:textColor="@color/black"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Сохранить"
                android:id="@+id/editMonkeyButton"
                android:textSize="18sp"
                android:backgroundTint="@color/bluevenderLight"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp" />
            <!--            <EditText-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:id="@+id/editPassword"-->
            <!--                android:background="@drawable/lavender_border"-->
            <!--                android:layout_marginTop="40dp"-->
            <!--                android:drawableLeft="@drawable/ic_password"-->
            <!--                android:padding="8dp"-->
            <!--                android:inputType="text"-->
            <!--                android:drawablePadding="8dp"-->
            <!--                android:hint="Пароль"-->
            <!--                android:textColor="@color/black"/>-->


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>